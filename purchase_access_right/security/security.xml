<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="purchase_access_right" model="ir.module.category">
            <field name="name">Purchase Approval </field>
            <field name="sequence" eval="700"/>
        </record>
        <record id="first_approval_group" model="res.groups">
            <field name="name">First PO Approval</field>
            <field name="users" eval="[(4, ref('base.user_admin'))]"/>
            <field name="category_id" ref="purchase_access_right"/>
        </record>
        <record id="second_approval_group" model="res.groups">
            <field name="name">Second PO Approval</field>
            <field name="users" eval="[(4, ref('base.user_admin'))]"/>
            <field name="category_id" ref="purchase_access_right"/>
        </record>
    </data>
</odoo>